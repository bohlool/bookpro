<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageView
            android:id="@+id/welcome_text"
            android:drawable="@drawable/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            
            android:layout_marginTop="20dp" />
    </RelativeLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <TableRow
            android:layout_width="fill_parent">
            <TextView
                android:textStyle="bold"
                android:id="@+id/text_name"
                android:text="bookPro ID:"
                android:textSize="16dp"
                android:height="40dp"
                android:width="50dp"
                android:textColor="#000000" android:layout_marginLeft="4dp"/>
            <EditText
                android:singleLine="true"
                android:height="20dp"
                android:id="@+id/login_userName"
                android:width="200dp" android:layout_height="40dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Password :"
                android:textStyle="bold"
                android:id="@+id/text_pass"
                android:textSize="16dp"
                android:height="40dp"
                android:width="110dp"
                android:textColor="#000000" android:layout_marginLeft="4dp"/>
            <EditText
                android:password="true"
                android:singleLine="true"
                android:height="20dp"
                android:id="@+id/login_password"
                android:width="200dp" android:layout_height="40dp"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <CheckBox
            android:text="Remember password"
            android:paddingLeft="50dp"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:id="@+id/login_cb_remember"
            android:textColor="#000000" />
        <Button
            android:layout_width="wrap_content"
            android:text="Login!"
            android:layout_height="40dp"
            android:width="150dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/login_bt_login"
            android:textColor="#000000" />
        <TextView
            android:layout_height="40dp"
            android:text="Get a new bookPro acount!"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="250dp"
            android:id="@+id/login_tv_acount" android:textColor="#AAFFAA"></TextView>
    </LinearLayout>
</LinearLayout>